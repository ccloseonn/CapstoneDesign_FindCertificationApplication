<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="104dp"
        android:orientation="vertical"
        android:background="@color/cottonBall"
        android:paddingHorizontal="13dp"
        android:paddingTop="69dp"
        tools:context=".mainfragment.MyPageFragment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="마이페이지"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/annapolosBlue"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cottonBall"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/annapolosBlue"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/annapolosBlue"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/annapolosBlue"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    <!--            <Button-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="match_parent"-->
    <!--                android:layout_marginRight="3dp"-->
    <!--                android:layout_marginTop="3dp"-->
    <!--                android:layout_marginBottom="3dp"-->
    <!--                android:text="수정하기"-->
    <!--                android:textColor="@color/annapolosBlue"-->
    <!--                android:textStyle="bold"-->
    <!--                android:textSize="17sp"-->
    <!--                android:background="@drawable/button_design"/>-->
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cottonBall">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="내 정보"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/annapolosBlue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/white"/>
                    <Button
                        android:id="@+id/change_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아이디 수정하기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textColor="@color/annapolosBlue"
                        android:background="@drawable/button_design"/>
                    <Button
                        android:id="@+id/change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="비밀번호 수정하기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textColor="@color/annapolosBlue"
                        android:background="@drawable/button_design"/>
                    <Button
                        android:id="@+id/change_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="닉네임 수정하기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textColor="@color/annapolosBlue"
                        android:background="@drawable/button_design"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cottonBall">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="자격증 즐겨찾기"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/annapolosBlue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/white"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/favoriteRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cottonBall">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="커뮤니티"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/annapolosBlue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>