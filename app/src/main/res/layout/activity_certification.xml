<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/certification_appbar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/certification_toolbar"
            app:title="자격증 정보"
            app:subtitleTextColor="@color/annapolosBlue"
            app:titleTextColor="@color/annapolosBlue"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cottonBall"
            android:paddingTop="69dp"
            android:paddingHorizontal="13dp"
            android:paddingBottom="104dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/certification_title"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="34sp"
                        android:textColor="@color/annapolosBlue"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/certification_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/annapolosBlue"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/certification_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/annapolosBlue"/>
                        <TextView
                            android:id="@+id/certification_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/annapolosBlue"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/favorite_certification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/heart"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/lightSilver"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/cottonBall">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="일정"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/annapolosBlue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <TextView
                            android:id="@+id/test_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/annapolosBlue"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/cottonBall">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="기출문제"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/annapolosBlue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <Button
                            android:id="@+id/challenge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="기출문제집"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="@color/annapolosBlue"
                            android:background="@drawable/button_design"/>
                        <Button
                            android:id="@+id/exam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="모의고사"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="@color/annapolosBlue"
                            android:background="@drawable/button_design"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/cottonBall">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="우대기업 및 혜택"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/annapolosBlue"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="@color/cottonBall">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="공무원 및 공기업"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/annapolosBlue"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:background="@color/white"/>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/public_company"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="0dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="@color/cottonBall">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="우대기업"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/annapolosBlue"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp"
                                        android:background="@color/white"/>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/company"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>