<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cottonBall">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FindCertificateApplication">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="간단 모의고사"
            app:titleTextColor="@color/annapolosBlue"
            android:id="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/iceTeal"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:padding="10dp"
                            android:text="1번문제"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/iceTeal"/>
                        <TextView
                            android:id="@+id/One"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/answer11"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="1번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer12"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="2번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer13"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="3번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer14"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="4번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/iceTeal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:padding="10dp"
                            android:text="2번문제"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/iceTeal"/>
                        <TextView
                            android:id="@+id/Two"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/answer21"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="1번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer22"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="2번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer23"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="3번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer24"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="4번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/iceTeal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:padding="10dp"
                            android:text="3번문제"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/iceTeal"/>
                        <TextView
                            android:id="@+id/Three"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:padding="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/answer31"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="1번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer32"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="2번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer33"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="3번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                            <Button
                                android:id="@+id/answer34"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:text="4번"
                                android:backgroundTint="@color/lightCarret"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/silverWhite"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
